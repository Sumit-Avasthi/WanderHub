<% layout("/layouts/boilerplate") -%>
<body>
    <h3>All Listings</h3>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
<% for(let listings of alllistings){ %>
    <a href="/listings/<%=listings._id%>" class="listing-links">
    <div class="card col listing-card" >
  <img src="<%=listings.image.url%>" class="card-img-top" alt="listing-image" style="height: 20rem;">
  <div class="card-img-overlay">
    
  </div>
  <div class="card-body">
    <p class="card-text">
        <b><%=listings.title%></b><br>
        &#x20b9; <%= listings.price.toLocaleString("en-IN") %> / night
    </p>
  </div>
</div>
</a>
<% } %>
    </div>
   
</body>



    

